<% if Student.needs_waiver.empty? %> 
  <em> All waivers have been signed </em>
<% else %> 
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Phone Number</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% Student.needs_waiver.each do |student| %>
      <tr>
        <td> <%= link_to student.name, student_path(student) %> </td>
        <td> <%= student.date_of_birth.strftime("%m/%d/%y") %></td>
				<td> <%= number_to_phone student.phone %> </td>
        <% if student.user.email.nil? %>
          <td> N/A </td>
        <% else %>
          <td> <%= student.user.email %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
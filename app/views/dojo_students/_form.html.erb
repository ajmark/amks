<%= simple_form_for @dojo_student, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> DojoStudent</legend>
		
		<%= f.input :dojo_id, :collection => DojoStudent.current.by_student.all %>
		<%= f.input :student_id, :collection => Student.active.alphabetical.all %>
		<%= f.input :source, :as => :hidden, :input_html => { :value => "new_page" } %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', dojos_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
<h2>Hello <%= current_user.student.first_name %>! </h2>
<div class="row">
	<div class="span4">
	  <h3>User Info</h3>
	  <div class="well">
	    <%= image_tag('blank_profile.jpg') %>
	  </div>
	  <%= render :partial => 'partials/user_details' %>
	</div>

	<div class="span8">
	  <h3>Dojo History</h3>
	  <%= render :partial => 'partials/dojo_history' %> 
	  <br>
	  <h3>Tournament Activity</h3>
	  <%= render :partial => 'partials/activities' %>
	  <br>
	  <h3>Upcoming Tournaments</h3>
	  <%= render :partial => 'partials/upcoming_tournaments' %>
	  <br>
	</div>
</div>

<div class="form-actions">
    <%= link_to raw("<i class='icon-pencil'></i> Edit Your Info"), edit_student_path(current_user.student), :class => 'btn' %>&nbsp;&nbsp;
    <%= link_to raw("<i class='icon-remove icon-white'></i> Delete Your Account"), student_path(current_user.student), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
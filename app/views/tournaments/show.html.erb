<div class="row">
  <div class="span5">
    <h3>Tournament Details</h3>
    <%= render :partial => "tournament_details" %>
  </div>
  <div class="span7">
    <h4>Active Sections</h4>
    <%= render :partial => "sections" unless @tournament.sections.empty? %>
    
  </div>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-list'></i> Display All Tournaments"), tournaments_path, :class => 'btn'  %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-pencil'></i> Edit #{@tournament.name}"), edit_tournament_path(@tournament), :class => 'btn' %>&nbsp;&nbsp;
  <%= link_to raw("<i class='icon-remove icon-white'></i> Delete #{@tournament.name}"), tournament_path(@tournament), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>